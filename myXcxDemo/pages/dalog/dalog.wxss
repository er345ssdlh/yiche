/* 遮罩 */
.shade {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.55);
    z-index: 10;
}
.shade_box {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    z-index: 11;
    min-width: 200rpx;
    min-height: 200rpx;
    font-size: 28rpx;
    box-sizing: border-box;
    color: #333;
    font-family: Helvetica, "Helvetica Neue", Arial, sans-serif;
    letter-spacing: 0;
    word-wrap: break-word;
 
    animation-name:popup;
    animation-duration:0.2s;
    animation-timing-function:linear;
    animation-delay:0;
    animation-iteration-count:1;
    animation-direction:normal;
}
 
@keyframes popup
{
    from{opacity:0;transform:scale(0.3,0.3);}
    to 	{opacity:1;transform:scale(1,1);}
}
 
 
/* 当前弹窗样式 */
.popup{
    width: 600rpx;
    height: 600rpx;
    background-color: #ffffff;
}
.popup .title{
    padding: 0 20rpx;
    text-align: center;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 32rpx;
    margin: 30rpx 0 30rpx 0;
    font-weight: bold;
}
.popup .btn{
    width: 400rpx;
    margin-left: 100rpx;
    margin-bottom: 30rpx;
}
.popup .content{
    margin: 50rpx 100rpx;
    font-size: 40rpx;
    text-align: center;
    color: #0099ff;
}
.popup .copy{
    padding:0 100rpx; 
    color: #999999;
    text-align: center;
}
.popup .msg{
  border-radius: 50%;
    color: #ff0000;
    text-align: center;
    margin-top: 100rpx;
}
.popup .msg image{
  width: 80rpx;
  height: 80rpx;
}