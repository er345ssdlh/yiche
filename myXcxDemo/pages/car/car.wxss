/* pages/car/car.wxss */
.car{
    margin-left: 30rpx;
    margin-right: 60rpx;
}
/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
.oneCar{
  vertical-align: middle;
  height: 100rpx;
  margin: 20rpx 0 20rpx 0;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ccc;
}
.tit{
  font-size: 35rpx;
  font-weight: bold;
}
.oneCar image{
  width: 100rpx;
  height: 100rpx;
  float: left;
}
.oneCar text{
  display: inline-block;
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  float: left;
  margin-left: 50rpx;
}
.hishs{
  width: 750rpx;
  height: 1200rpx;
  background-color: rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0rpx;
  right: 0rpx;
  z-index: 9999
}
.hish{
  width: 590rpx;
  height: 1200rpx;
  position: absolute;
  right: 0;
  top: 0rpx;
  right: -590rpx;
  background-color: #ffffff;
}
.abc{
  background-color:#ee5946;
}
.test{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right: 590rpx;
  top: 800rpx;
  background-color: #ee5946;
  text-align: center;
  line-height: 100rpx;
  color: #ffffff;
  border-radius: 20rpx 0 0 20rpx;
  opacity: 0;
}
.top-nav { 
  width: 100%;  
  height: 80rpx;  
  line-height: 80rpx; 
  font-size: 32rpx;  
  display: flex;  /*弹性布局真的很好用*/
  justify-content: space-around;  /*一行内容均分剩下的宽度*/
  background-color: #fff;  
  z-index: 99;
}
.top-btn text { 
  font-size: 30rpx;
}
/* 点击选中的样式 */
.top-hoverd-btn { 
  border-bottom: 4rpx solid #ff3422;  
}
.top-hoverd-btn text{ 
    font-size: 45rpx;
}
.head{
  height: 90rpx;
}
.carCon{
  margin: 35rpx 0 35rpx 0;
  width: 590rpx;
}
.carName{
  width: 524rpx;
  height: 60rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 20rpx;
  font-weight: bold;
  background-color: #eee;
}
.scroll-view{
  width: 590rpx;
  padding: 0 0 0 35rpx;
}
.clearfix:after{/*伪元素是行内元素 正常浏览器清除浮动方法*/
    content: "";
    display: block;
    height: 0;
    clear:both;
    visibility: hidden;
}
.carlists image{
  width: 140rpx;
  height: 100rpx;
  padding: 30rpx 0 30rpx 0;
  float: left;
}
.carlists>view{
  width: 340rpx;
  height: 100rpx;
  padding: 30rpx 0 30rpx 0;
  float: left;
  margin-left: 30rpx;
  overflow: hidden;
}
.carlists>view text{
  font-size: 20rpx;
}
.tex1{
  color: red;
}
.tex2{
  color: green;
}
.carlists>view text{
  font-size: 20rpx;
}
.indexFixed{
  position: fixed;
  top:0;
  left:0;
  bottom:0;
  right:0;
}
.rights{
  width: 50rpx;
  position: fixed;
  right: 2rpx;
  top: 0;
}
.reds{
    margin: 12rpx 0 0 0;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 40rpx;
    margin-left: 5rpx;
}
.red{
  background-color: red;
  color: #ffffff;
}